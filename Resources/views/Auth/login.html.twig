{% extends base_auth %}

{% block title %}{{ 'gsf_user.auth.login.title'|trans }}{% endblock %}

{% block content %}
	<div class="gsf-login" >
		
		<h1>{{ 'gsf_user.auth.login.title'|trans }}</h1>
		
		<div class="gsf-login-form" >
			{{ form(form) }}
		</div>
		
		<div class="gsf-login-link" >
			<a href="{{ register }}" class="gsf-link-register"   title="{{ 'gsf_user.auth.login.register' }}" >{{ 'gsf_user.auth.login.register'|trans }}</a>
			<a href="{{ reset_password }}" class="gsf-link-reset_password" title="{{ 'gsf_user.auth.login.forgot_password'|trans }}" >{{ 'gsf_user.auth.login.forgot_password'|trans }}</a>
		</div>
		
	</div>
{% endblock %}