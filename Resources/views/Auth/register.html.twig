{% extends base_auth %}

{% block title %}{{ 'gsf_user.auth.register.title'|trans }}{% endblock %}

{% block content %}
	<div class="gsf-register" >
		
		<h1>{{ 'gsf_user.auth.register.title'|trans }}</h1>
		
		<div class="gsf-register-form" >
			{{ form(form) }}
		</div>
		
		<div class="gsf-register-link" >
			<a href="{{ login }}" class="gsf-link-login"   title="{{ 'gsf_user.auth.register.login'|trans }}" >{{ 'gsf_user.auth.register.login'|trans }}</a>
			<a href="{{ reset_password }}" class="gsf-link-reset_password" title="{{ 'gsf_user.auth.register.forgot_password'|trans }}" >{{ 'gsf_user.auth.register.forgot_password'|trans }}</a>
		</div>
	
	</div>
{% endblock %}